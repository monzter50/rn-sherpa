{
  "name": "sherpa",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo check-types",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "version-packages:beta": "changeset version --snapshot beta",
    "release": "turbo build --filter=rn-sherpa && changeset publish",
    "release:beta": "turbo build --filter=rn-sherpa && changeset publish --tag beta"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
